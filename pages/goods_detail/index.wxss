.detail_index {
  padding-bottom: 90rpx;
}
.detail_index .index_swiper swiper {
  height: 60vw;
  text-align: center;
}
.detail_index .index_swiper swiper image {
  width: 70%;
}
.detail_index .goods_price {
  padding: 20rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: var(--themeColor);
}
.detail_index .goods_name_row {
  display: flex;
  padding-bottom: 10rpx;
  border-bottom: 10rpx solid #ededed;
}
.detail_index .goods_name_row .goods_name {
  flex: 5;
  color: #000;
  font-size: 30rpx;
  padding: 0 10rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.detail_index .goods_name_row .goods_collect {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-left: 1rpx solid #000;
}
.detail_index .goods_name_row .goods_collect .icon-shoucang1 {
  color: var(--themeColor);
}
.detail_index .goods_info .goods_info_title {
  font-size: 32rpx;
  color: var(--themeColor);
  font-weight: 600;
  padding: 20rpx;
}
.detail_index .btm_tool {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  display: flex;
  border-top: 1rpx solid #ccc;
}
.detail_index .btm_tool .tool_item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 22rpx;
  position: relative;
}
.detail_index .btm_tool .tool_item button {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.detail_index .btm_tool .btn_cart {
  flex: 2;
  background-color: #ffa500;
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
}
.detail_index .btm_tool .btn_buy {
  flex: 2;
  background-color: #eb4450;
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
}
